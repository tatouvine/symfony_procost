<div class="list-group">
    {% if actualyBrand is not defined %}
        <a href="{{ asset('/store') }}" class="list-group-item active">Toutes les marques</a>
        {% for brand in brands %}
            <a href="{{ asset('/store/'~brand.id) }}" class="list-group-item">{{ brand.name }}</a>
        {% endfor %}
    {% else %}
        <a href="{{ asset('/store') }}" class="list-group-item">Toutes les marques</a>

        {% for brand in brands %}
            {% if actualyBrand == brand.name %}

                <a href="{{ asset('/store/'~brand.id) }}"
                   class="list-group-item active">{{ brand.name }}</a>

            {% else %}

                <a href="{{ asset('/store/'~brand.id) }}" class="list-group-item">{{ brand.name }}</a>

            {% endif %}
        {% endfor %}
    {% endif %}
</div>
