{% extends 'layout.html.twig' %}

{% block title %}Hello SotreController!{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Nos marques</p>
                {{ render(controller('App\\Controller\\AllComposant::composantBrand',{brand:product.brand.id}
                )) }}
            </div>

            <div class="col-md-9">
                <p class="lead">
                    Fiche descriptive " Mon produit "
                    <a href="#" class="btn btn-default pull-right">Retour aux produits</a>
                </p>
                <div class="row">
                    <div class="thumbnail">
                        <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                        <div class="caption-full">
                            <h4 class="pull-right"><span class="badge">120,00 â‚¬</span></h4>
                            <h3>{{ product.name }}</h3>
                            <p>{{ product.description }}</p>
                            <p>
                                {{ product.descriptionLong }}
                            </p>
                            {% if product.colors|length %}
                                <p>coloris:
                                    {% for color in product.colors %}
                                        {{ color.name~(not loop.last ? ', ') }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="well">
                        <p class="pull-right label label-success">Actuellement 3 avis</p>
                        {% for commentaire in commentaires %}
                            <div class="row">
                                <div class="col-md-12">
                                    <span class="label label-info">{{ commentaire.pseudo }}</span>
                                    <span class="label label-default pull-right">{{ commentaire.createdAt|date('d/m/Y') }}</span>
                                    <p>{{ commentaire.message }}</p>
                                </div>
                            </div>

                            <hr/>

                        {% endfor %}
                        <div>
                            {{ form_start(form) }}
                                <div class="form-group">

                                    <label for="name">Votre nom</label>
                                    {{ form_label(form.pseudo) }}
                                    {{ form_widget(form.pseudo,{'attr':{'class':'form-control','placeholder':form.pseudo.vars.label} }) }}
                                    {{ form_errors(form.pseudo) }}

                                </div>
                                <div class="form-group">

                                    <label for="message">Votre avis</label>
                                    {{ form_label(form.message) }}
                                    {{ form_widget(form.message,{'attr':{'class':'form-control','placeholder':form.message.vars.label, 'rows': 6} }) }}
                                    {{ form_errors(form.message) }}

                                </div>
                                <button type="submit" class="btn btn-info">Envoyer mon avis</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr/>

        <!-- Footer -->
        <footer>
            <p>Copyright &copy; Shoefony 2019</p>
        </footer>
    </div>

{% endblock %}
