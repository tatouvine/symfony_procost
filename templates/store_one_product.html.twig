{% extends 'layout.html.twig' %}

{% block title %}Hello SotreController!{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Nos marques</p>
                <div class="list-group">
                    {% if actualyBrand is not defined %}
                        <a href="{{ asset('/store') }}" class="list-group-item active">Toutes les marques</a>
                        {% for brand in brands %}
                            <a href="{{ asset('/store/'~brand.id) }}" class="list-group-item">{{ brand.name }}</a>
                        {% endfor %}
                    {% else %}
                        <a href="{{ asset('/store') }}" class="list-group-item">Toutes les marques</a>

                        {% for brand in brands %}
                            {% if actualyBrand == brand.name %}

                                <a href="{{ asset('/store/'~brand.id) }}"
                                   class="list-group-item active">{{ brand.name }}</a>

                            {% else %}

                                <a href="{{ asset('/store/'~brand.id) }}" class="list-group-item">{{ brand.name }}</a>

                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="col-md-9">
                <p class="lead">
                    Fiche descriptive " Mon produit "
                    <a href="#" class="btn btn-default pull-right">Retour aux produits</a>
                </p>
                <div class="row">
                    <div class="thumbnail">
                        <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                        <div class="caption-full">
                            <h4 class="pull-right"><span class="badge">120,00 €</span></h4>
                            <h3>{{ product.name }}</h3>
                            <p>{{ product.description }}</p>
                            <p>
                                {{ product.descriptionLong }}
                            </p>
                            {% if product.colors|length %}
                                <p>coloris:
                                    {% for color in product.colors %}
                                        {{ color.name~(not loop.last ? ', ') }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="well">
                        <p class="pull-right label label-success">Actuellement 3 avis</p>
                        {% for i in 1..3 %}
                            <div class="row">
                                <div class="col-md-12">
                                    <span class="label label-info">Prénom Nom</span>
                                    <span class="label label-default pull-right">28/01/2015</span>
                                    <p>Un commentaire sur le produit, rédigé par un client, sera affiché à cet
                                        endroit.</p>
                                </div>
                            </div>

                            <hr/>

                        {% endfor %}
                        <div>
                            <form>
                                <div class="form-group">
                                    <label for="name">Votre nom</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="message">Votre avis</label>
                                    <textarea class="form-control" name="comment" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-info">Envoyer mon avis</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr/>

        <!-- Footer -->
        <footer>
            <p>Copyright &copy; Shoefony 2019</p>
        </footer>
    </div>

{% endblock %}