{% extends 'layout.html.twig' %}

{% block title %}Hello SotreController!{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="col-md-3">
                <p class="lead">Nos marques</p>
                {% if actualBrand is defined %}
                    {{ render(controller('App\\Controller\\AllComposant::composantBrand',{brand: actualBrand})) }}
                {% else %}
                    {{ render(controller('App\\Controller\\AllComposant::composantBrand',{brand: -1})) }}
                {% endif %}
            </div>

            <div class="col-md-9">
                <div class="row text-center">

                    {% for product in products %}
                        <div class="col-md-4 col-sm-6 hero-feature">
                            {% include 'one_item_template.html.twig' %}
                        </div>
                    {% endfor %}

                </div>

                <div class="row text-center">
                    <nav>
                        <ul class="pagination pagination-lg">
                            <li>
                                <a href="#" aria-label="Précédent">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% for i in 1..5 %}
                                <li class="{{ i is same as(1) ? 'active' }}">
                                    <a href="#">{{ i }}</a>
                                </li>
                            {% endfor %}
                            <li>
                                <a href="#" aria-label="Suivant">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <hr/>

    </div>
{% endblock %}
