{% extends 'layout.html.twig' %}

{% block title %}Hello SotreController!{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Nos marques</p>
                <div class="list-group">
                    <a href="{{ asset('/store') }}" class="list-group-item active">Toutes les marques</a>
                    {% for product in products %}
                        {% for brand in product.brand %}
                            <a href="{{ asset('/store/'~brand.id) }}" class="list-group-item">{{ brand.name }}</a>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>

            <div class="col-md-9">
                <p class="lead">Nos produits " Toutes les marques "</p>
                <div class="row text-center">

                    {% for product in products %}
                        <div class="col-md-4 col-sm-6 hero-feature">
                            <div class="thumbnail">
                                <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                                <div class="caption">
                                    <h3>{{ product.name }}</h3>

                                    {% if product.colors|length %}
                                        <p>coloris:
                                            {% for color in product.colors %}
                                                {{ color.name~(not loop.last ? ', ') }}
                                            {% endfor %}
                                        </p>
                                    {% endif %}

                                    <p>{{ product.description }}</p>
                                    <p>
                                        <span class="badge">{{ product.price }}</span>
                                        <a href="{{ asset('/store/product/'~product.id~'/details/'~product.slug) }}"
                                           class="btn btn-default">Voir la fiche</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>

                <div class="row text-center">
                    <nav>
                        <ul class="pagination pagination-lg">
                            <li>
                                <a href="#" aria-label="Précédent">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% for i in 1..5 %}
                                <li class="{{ i is same as(1) ? 'active' }}">
                                    <a href="#">{{ i }}</a>
                                </li>
                            {% endfor %}
                            <li>
                                <a href="#" aria-label="Suivant">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <hr/>

    </div>
{% endblock %}
